<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashBoad.Helpdesk">
   <include layout="@layout/toolbar_new"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:background="@drawable/rect_amount1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="3"
              android:orientation="horizontal">
              <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                 android:textSize="@dimen/_14sdp"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:text="Address "/>
                <TextView
                    android:background="@drawable/rect"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Varanasi "
                    />

          </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Contact Info. "/>
                <LinearLayout
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:textColor="@color/textcolor"
                    android:id="@+id/tv_contact"
                    android:layout_weight="1"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+91 9120066228 "
                    />
                    <TextView
                        android:id="@+id/email"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="@color/broun_color"
                        android:layout_weight="1"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="partyplanet42@gmail.com "
                        />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Website "/>
                <LinearLayout
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_openWebSite"
                    android:textColor="@color/blue"
                    android:layout_weight="1"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="thepartyplanets.com "
                    />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <Button
         android:layout_marginRight="@dimen/_15sdp"
            android:layout_gravity="right"
            android:id="@+id/booking"
            style="@style/Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rect_design"
            android:elevation="@dimen/_15sdp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:padding="@dimen/_10sdp"
            android:text="CHAT NOW"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>