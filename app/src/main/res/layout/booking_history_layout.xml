<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:padding="@dimen/_5sdp"
    android:elevation="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:fadingEdgeLength="@dimen/_40sdp"
    app:cardPreventCornerOverlap="true"
    android:foreground="@drawable/shadowlist"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <!-- <androidx.cardview.widget.CardView
        android:elevation="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:fadingEdgeLength="@dimen/_40sdp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:foreground="@drawable/shadowlist"
        android:paddingBottom="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"

        >-->
        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:padding="@dimen/_1sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:padding="@dimen/_10sdp"

                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="@dimen/_80sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:elevation="@dimen/_40sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_weight="0.5"
                    android:layout_height="@dimen/_80sdp">
                <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/imm" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_weight="2.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="vertical">
                    <LinearLayout
                      android:weightSum="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/_16sdp"
                        android:id="@+id/title"
                        android:fontFamily="@font/josefin_sans_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deluxe Room"
                        android:textColor="@color/textcolor"
                        />
                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                     <ImageView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/tracker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location"


                    />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Booking Date : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        />

                        <TextView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:id="@+id/date"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="@dimen/_12sdp"
                            />
                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/time"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Time : "
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        />
                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:id="@+id/timeslot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:textSize="@dimen/_12sdp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Total Amount : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:id="@+id/amount"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Payment Status : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:id="@+id/payment"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            />
                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_icon_metro_location" />

            <TextView
                android:layout_marginLeft="@dimen/_2sdp"
                android:fontFamily="@font/josefin_sans_semibold"
                android:id="@+id/tv_address"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="5353 South Eve San"
                />
        </LinearLayout>
        <View
            android:id="@+id/view_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:background="@color/border"
            android:layout_height="@dimen/_1sdp"/>
        <LinearLayout
           android:visibility="gone"
            android:layout_marginTop="@dimen/_2sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/cancelledMessage"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/josefin_sans_semibold"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="If you want to cancelled booking"
                android:textSize="@dimen/_14sdp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="@color/white"




                    >
                    <TextView
                        android:background="@color/black"
                        android:padding="@dimen/_2sdp"
                        android:id="@+id/cancelled"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   Yes   "
                        android:textSize="@dimen/_14sdp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
            <View
                android:visibility="gone"
                android:id="@+id/feedbakline"
                android:layout_width="match_parent"
                android:background="@color/border"
                android:layout_height="@dimen/_1sdp"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/feedback"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/white"
            >
            <TextView

                android:background="@color/black"
               android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="    Feedback     "
                android:textSize="@dimen/_16sdp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>




    </LinearLayout>


    <!--</androidx.cardview.widget.CardView>-->
</androidx.cardview.widget.CardView>