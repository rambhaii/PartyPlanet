<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_50sdp">

        <LinearLayout
            android:elevation="@dimen/_50sdp"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imm" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deluxe Room"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/bedtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_bed"
                        android:drawablePadding="@dimen/_2sdp"
                        android:fontFamily="@font/josefin_sans_light"
                        android:text="double bed"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/room_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans_light"
                        android:text="Size :182 fit2"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/breakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_free_breakfast"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="Breakfast Included "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                   <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amenities "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_wifi"
                            android:drawablePadding="@dimen/_2sdp"
                            android:fontFamily="@font/josefin_sans_light"
                            android:text="free wifi"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/sanitizer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_hand_sanitizer"
                            android:drawablePadding="@dimen/_2sdp"
                            android:fontFamily="@font/josefin_sans_light"
                            android:text="Aircontioning "
                            android:textSize="@dimen/_12sdp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_shower"
                            android:drawablePadding="@dimen/_2sdp"
                            android:fontFamily="@font/josefin_sans_light"
                            android:text="Private bathroom"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_tv"
                            android:drawablePadding="@dimen/_2sdp"
                            android:fontFamily="@font/josefin_sans_light"
                            android:text="TV "
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>-->

                    <TextView
                        android:id="@+id/roomAvailability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans_light"
                        android:text="only 2 room left on partyplanet "
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amenities"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerview4"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/lining" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/textcolor"
                    android:fontFamily="@font/josefin_sans_light"
                    android:padding="@dimen/_4sdp"
                    android:text="Limited-time Deal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_18sdp"
                   android:id="@+id/pricefodays"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/josefin_sans_light"
                    android:text="Price For one Night"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/current_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/strike_through"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/offer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@font/josefin_sans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/ic_signin"
                android:backgroundTint="@color/lohoyint"
                android:visibility="gone"
                >
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="6"
                    android:orientation="horizontal">
                <Spinner
                    android:layout_weight="0.6"
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"

                    />

                <Button
                   android:layout_weight="5.4"
                    android:id="@+id/btn_remove"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:text="x"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/ic_signin"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_30sdp"
                    android:text="SELECT"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>


        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>