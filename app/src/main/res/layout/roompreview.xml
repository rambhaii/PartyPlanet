<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#F1F1F1"
        app:cardMaxElevation="12dp"

        >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
      <TextView
          android:id="@+id/roomName"
        style="@style/Heading"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Room Name"/>
                <TextView
                   android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/count"
                    style="@style/Heading"
                    android:textStyle="bold"
                    android:textSize="@dimen/_17sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:id="@+id/information"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_information"
                app:tint="@color/blue"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <TextView
        android:textColor="@color/black"
        android:id="@+id/adult"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/josefin_sans_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 adult"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"

        />
    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:id="@+id/child"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/josefin_sans_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 child"
        android:textSize="@dimen/_13sdp"
        />
    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/black"
        android:id="@+id/bed"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/josefin_sans_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 lage doble bed "
        android:textSize="@dimen/_13sdp"
        />
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <TextView
          android:textStyle="bold"
          android:textColor="@color/black"
          android:textSize="@dimen/_13sdp"
          android:fontFamily="@font/josefin_sans_light"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Booking for "
        />
        <TextView
            android:textStyle="bold"
            android:id="@+id/booking_userName"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/josefin_sans_light"
            android:textColor="@color/blue"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Durgesh "
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/booking_conditions"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/josefin_sans_light"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Conditions "
        android:textStyle="bold"
        />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>