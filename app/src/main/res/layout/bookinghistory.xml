<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        >

        <LinearLayout
           android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    >

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imm" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deluxe Room"
                        android:textColor="@color/textcolor"
                        android:fontFamily="@font/josefin_sans_bold"
                        android:textSize="@dimen/_15sdp" />


                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/totalroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/josefin_sans_light"
                        android:text="Total Room"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/bedtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_bed"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/josefin_sans_light"
                        android:text="double bed"
                        android:textSize="@dimen/_12sdp" />
                    <TextView android:textStyle="bold"
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:fontFamily="@font/josefin_sans_light"
                        android:text="double bed"
                        android:textSize="@dimen/_12sdp" />




                    <TextView android:textStyle="bold"
                        android:id="@+id/room_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans_light"
                        android:text="Size :182 fit2"
                        android:textSize="@dimen/_12sdp" />



                 <!--   <TextView android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amenities- "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_wifi"
                            android:drawablePadding="@dimen/_2sdp"
                            android:fontFamily="@font/josefin_sans_light"
                            android:text="free wifi"
                            android:textSize="@dimen/_12sdp" />

                        <TextView android:textStyle="bold"
                            android:id="@+id/sanitizer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_hand_sanitizer"
                            android:drawablePadding="@dimen/_2sdp"
                            android:fontFamily="@font/josefin_sans_light"
                            android:text="Aircontioning "
                            android:textSize="@dimen/_12sdp"

                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_shower"
                            android:drawablePadding="@dimen/_2sdp"
                            android:fontFamily="@font/josefin_sans_light"
                            android:text="Private bathroom"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tv_available"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_tv"
                            android:drawablePadding="@dimen/_2sdp"
                            android:fontFamily="@font/josefin_sans_light"
                            android:text="TV "
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>
                    <TextView android:textStyle="bold"
                        android:id="@+id/roomAvailability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans_light"
                        android:text="only 2 room left on partyplanet "
                        android:textSize="@dimen/_12sdp" />-->


                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amenities "
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerview4"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/lining" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/josefin_sans_light"
                     android:padding="@dimen/_2sdp"
                    android:textColor="@color/textcolor"
                    android:text="Date And Time"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"/>

                <TextView android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_18sdp"
                    android:id="@+id/date"
                    android:fontFamily="@font/josefin_sans_light"
                     android:text="07-12-2022 to 08-12-2022"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp" />
                <TextView android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/child"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/josefin_sans_light"
                    android:text="1 child"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp" />



            </LinearLayout>






        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>